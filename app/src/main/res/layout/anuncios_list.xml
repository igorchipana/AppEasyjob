<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:text="Publicador: "
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".8"

            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:text="Título: "
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="15sp"
            android:layout_weight=".8"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:text="Descripción: "
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="12sp"
            android:layout_weight=".8"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:text="Cotáctalo: "
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txttelcorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="12sp"
            android:layout_weight=".8"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btncomentar5"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginRight="1dp"
            android:layout_weight="2"
            android:background="@drawable/btncomentarios"
            android:drawableBottom="@drawable/ic_action_namecomen2"
            android:textSize="10sp"
            android:textStyle="bold|italic"
            android:tooltipText="Prueba" />

        <Button
            android:id="@+id/btncomentar6"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:background="@drawable/btncomentarios"
            android:drawableBottom="@drawable/ic_action_nameojo1"
            android:textSize="10sp"
            android:textStyle="italic" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/idussss"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:visibility="invisible"

            />
        <TextView
            android:id="@+id/idanuncio"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:visibility="invisible"

            />
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"/>

</LinearLayout>